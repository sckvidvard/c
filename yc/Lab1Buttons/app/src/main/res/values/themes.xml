<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab1Buttons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ThemeBtnRG">
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ThemeBtnYB">
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ThemeBtnBW">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="MiniBtn1">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="MiniBtn2">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="MiniBtn3">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ThemeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_width">match_parent</item>
        <!-- Высота элемента заполняет всё пространство родителя -->
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
